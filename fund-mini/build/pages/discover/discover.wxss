    position: relative;
    justify-content: center;
}

.hot-left {
    display: flex;
    width: 240rpx;
    justify-content: center;
}

.hot-icon {
    position: absolute;
    top: 0;
    right: 45rpx;
    width: 50rpx;
    height: 80rpx;
}

.line-hot {
    position: absolute;
    bottom: 0;
